<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.das_quienesquien_jonalba">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="¿QUIÉN ES QUIÉN?"
        android:roundIcon="@mipmap/logo_app_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".Resolver"></activity>
        <activity android:name=".GestionSalas" />
        <activity
            android:name=".Chat"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Chat"/>
        <activity
            android:name=".MenuPrincipal"
            android:theme="@style/MenuPrincipal" />
        <activity
            android:name=".Registro"
            android:theme="@style/Registro" />
        <activity
            android:name=".Juego"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Login"
            android:theme="@style/Login"/>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Principal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />



    </application>

</manifest>